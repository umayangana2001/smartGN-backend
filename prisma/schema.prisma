generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/gn_db"
}

enum Role {
  USER
  VILLAGE_OFFICER
  ADMIN
}

enum RequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  IN_PROGRESS
  COMPLETED
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile        UserProfile?
  serviceRequests ServiceRequest[]
}

model VillageOfficer {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String
  district  String
  division  String
  role      Role     @default(VILLAGE_OFFICER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  fullName  String
  address   String
  nic       String
  email     String
  telephone String
  district  String
  division  String
  birthday  DateTime
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  documents UserDocument[]
}

model UserDocument {
  id           String   @id @default(uuid())
  userId       String
  userProfile  UserProfile @relation(fields: [userId], references: [userId])
  documentName String
  filePath     String
  createdAt    DateTime @default(now())
}

model ServiceType {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  requests    ServiceRequest[]
}

model ServiceRequest {
  id                String            @id @default(uuid())
  userId            String
  serviceTypeId     String
  status            RequestStatus     @default(PENDING)
  verificationStatus VerificationStatus @default(PENDING)
  documentPath      String?           // Path to uploaded document for this request
  remarks           String?           // Additional notes/comments
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  serviceType       ServiceType       @relation(fields: [serviceTypeId], references: [id])

  @@index([userId])
  @@index([serviceTypeId])
  @@index([status])
}
